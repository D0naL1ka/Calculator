<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">100dp</item> <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="NumberButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/calc_btn_number_bg</item>
    </style>

    <style name="OperatorButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/calc_btn_operator_bg</item>
    </style>

    <style name="UtilityButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/calc_btn_util_bg</item>
        <item name="android:textColor">@color/calc_btn_util_text</item>
    </style>
</resources>